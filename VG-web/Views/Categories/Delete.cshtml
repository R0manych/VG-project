@model VG_web.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Вы уверены что хотите удалить?</h2>
<div>
    <h3>@Html.DisplayFor(model => model.Name)</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
@if (Model.Image != null && Model.Image.Picture != null)
{
            @Html.DisplayNameFor(model => model.Image)
}
        </dt>

        <dd>
            @if (Model.Image != null && Model.Image.Picture != null)
            {
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Image.Picture) + "\" />")
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <h3><span class="label label-defaul">@Html.ActionLink("Back", "Index")</span></h3>
        </div>
    }
</div>
