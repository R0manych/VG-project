@{
    ViewBag.Title = "Оставить заявку";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    @Scripts.Render("~/Scripts/form-scripts.js")
    @Scripts.Render("~/Scripts/jquery-3.1.1.min.js")
    @Scripts.Render("~/bundles/jquery")
</head>

@model VG_web.Models.EmailModel

<body>
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
        <div class="row">
            <h3>Отправьте нам сообщение и мы обязательно позвоним Вам.</h3>
            <form role="form" id="contactForm">
                <div class="row">
                    <div class="form-group">
                        <label for="name" class="h4">Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "ФИО", @required = "true" })
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="h4">Email</label>
                        @Html.TextBoxFor(m => m.From, new { @class = "form-control", @type = "email", @placeholder = "Email", @required = "true" })
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="Phone" class="h4">Phone</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "tel", @placeholder = "Телефон", @required = "true" })
                        <div class="help-block with-errors"></div>
                    </div>

                    <div class="form-group">
                        <label for="message" class="h4">Message</label>
                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @placeholder = "Сообщение", @required = "true" })
                        <div class="help-block with-errors"></div>
                    </div>
                    <input type="submit" value="Отправить" class="btnbtn-success" />
                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                </div>
            </form>
        </div>
    }
</body>
</html>