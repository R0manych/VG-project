@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<VG_web.ViewModels.CategoryViewModel>

<div class="jumbotron">
    <h1>Весовой городок</h1>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
          <p>
              <a href='@Url.Action("Index", "Subcategories", new { id = item.CategoryID })'>
                  @if (item.Image != null && item.Image.Picture != null)
                  {
                      @Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image.Picture) + "\" />")
                  }
              </a>
               <h2><span class="label label-defaul">  @Html.ActionLink(item.Name, "Index", "Subcategories", new { id = item.CategoryID }, null)</span></h2>
</p>
        </div>
    }
</div>