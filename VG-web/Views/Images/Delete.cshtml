@model LibDatabase.DatabaseContext.Image

@{
    ViewBag.Title = "Удалить";
}

<h2>Вы уверены что хотите удалить?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        @if (Model.Image1 != null)
            {
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Image1) + "\" />")
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" />
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
