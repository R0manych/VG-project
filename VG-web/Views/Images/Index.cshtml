@model IEnumerable<LibDatabase.DatabaseContext.Image>


@{
    ViewBag.Title = "Изображения";
}

<h2>Изображения</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image1 != null)
            {
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image1) + "\" />")
            }
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id=item.ImageID })
        </td>
    </tr>
}
</table>


@using (Html.BeginForm("Save", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="submit" value="Сохранить" class="btn btn-default" />
}   
