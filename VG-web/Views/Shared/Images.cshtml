@model IEnumerable<LibDatabase.DatabaseContext.Image>

<p>
    @Html.ActionLink("Добавить", "Create", "Images")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @if (item.Image1 != null)
           {
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image1) + "\" />")
           }
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", "Images", null, new { id = item.ImageID })
        </td>
    </tr>
}

</table>
