@model IEnumerable<VG_web.ViewModels.SubcategoryViewModel>

@{
    ViewBag.Title = "Подкатегории";
}
<body>
     <h2>
        @if (Model.Any())
        {
            @Html.DisplayText(Model.FirstOrDefault().CategoryName);
        }
    </h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <p>
                    <a href='@Url.Action("Index", "Products", new { subcatId = item.SubcategoryID })'>
                        @if (item.Image != null && item.Image.Picture != null)
                        {
                            @Html.Raw("<img style='width:150px; height:120px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image.Picture) + "\" />")
                        }
                    </a>
                    <h2><span class="label label-defaul"> @Html.ActionLink(item.Name, "Index", "Products", new { subcatId = item.SubcategoryID }, null)</span></h2>
                </p>
            </div>
        }
        </div>
</body>
     <div class="col-md-6">
        <h3><span class="label label-defaul"> @Html.ActionLink("Назад", "Index", "Home")</span></h3>
    </div>